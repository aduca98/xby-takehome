{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020", "DOM", "esnext.asynciterable"],
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src",
        "sourceRoot": "./src",
        "baseUrl": "./",
        "noImplicitThis": false,
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": false,
        "paths": {
            "src/*": ["./src/*"],
            "shared/*": ["../shared/*"]
        }
    },
    "filesGlob": ["./src/**/*.ts"],
    "include": ["src", "../shared"],
    "exclude": ["node_modules"]
}
