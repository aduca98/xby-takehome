{
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node -r tsconfig-paths/register --transpile-only ./src/main.ts",
    "events": {
        "crash": "sh -c 'lsof -i :${PORT:-5000} -t | xargs kill'",
        "restart": "sh -c 'lsof -i :${PORT:-5000} -t | xargs kill'"
    },
    "delay": "1500"
}
