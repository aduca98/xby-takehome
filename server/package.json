{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "./build/main.js",
    "scripts": {
        "install:all": "yarn install --frozen-lockfile --prod=false",
        "build": "rm -rf build && ./node_modules/typescript/bin/tsc && npm run copy",
        "start": "node  -r ./prod-paths.js --optimize_for_size --trace-warnings build/app.js",
        "start:dev": "./node_modules/nodemon/bin/nodemon.js --config nodemon.json",
        "start:prod": "pm2-runtime start ecosystem.config.js --env production",
        "/////": "graphql setup",
        "graphql:codegen": "node_modules/.bin/graphql-codegen --config codegen.yml",
        "graphql:codegen:watch": "node_modules/.bin/graphql-codegen --watch"
    },
    "author": "Andrew Duca",
    "license": "ISC",
    "dependencies": {
        "@graphql-tools/graphql-file-loader": "^7.1.0",
        "@graphql-tools/load": "^7.3.2",
        "apollo-server": "^3.3.0",
        "apollo-server-core": "^3.3.0",
        "apollo-server-express": "^3.3.0",
        "app-root-path": "^3.0.0",
        "express": "^4.17.1",
        "graphql": "^15.6.0",
        "graphql-codegen": "^0.4.0",
        "graphql-tools": "^8.2.0",
        "http": "^0.0.1-security",
        "lodash": "^4.17.21",
        "mongoose": "^6.0.8",
        "pm2": "^5.1.2",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.2.0",
        "@graphql-codegen/typescript": "^2.2.2",
        "@graphql-codegen/typescript-resolvers": "^2.3.0",
        "@types/express": "^4.17.13",
        "@types/lodash": "^4.14.175"
    }
}
