{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "./build/main.js",
    "scripts": {
        "install:all": "yarn install --frozen-lockfile --prod=false",
        "build": "rm -rf build && ./node_modules/typescript/bin/tsc && npm run copy",
        "start": "node  -r ./prod-paths.js --optimize_for_size --trace-warnings build/app.js",
        "start:dev": "./node_modules/nodemon/bin/nodemon.js --config nodemon.json",
        "start:prod": "pm2-runtime start ecosystem.config.js --env production",
        "test": "NODE_ENV=test node ./node_modules/.bin/jest --runInBand --config src/__tests__/config/jest.config.json --passWithNoTests --logHeapUsage --detectOpenHandles --collectCoverage",
        "/////": "graphql setup",
        "graphql:codegen": "graphql-codegen",
        "graphql:codegen:watch": "graphql-codegen --watch",
        "//////": "linting",
        "prettier": "prettier --write \"**/*.ts\"",
        "prettier-changed": "prettier --write",
        "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
        "lint:ci": "eslint '*/**/*.{ts,tsx}' --quiet"
    },
    "author": "Andrew Duca",
    "license": "ISC",
    "dependencies": {
        "apollo-server": "^3.3.0",
        "apollo-server-core": "^3.3.0",
        "apollo-server-express": "^3.3.0",
        "app-root-path": "^3.0.0",
        "express": "^4.17.1",
        "graphql-codegen": "^0.4.0",
        "graphql-tools": "^8.2.0",
        "http": "^0.0.1-security",
        "lodash": "^4.17.21",
        "mongoose": "^6.0.8",
        "pm2": "^5.1.2",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/lodash": "^4.14.175"
    }
}
